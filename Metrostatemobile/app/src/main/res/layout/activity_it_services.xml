<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.russwilkie.metrostatemobile.activities.ItservicesActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/itsInfo">

        <android.support.constraint.Guideline
            android:id="@+id/horizontalGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02"/>

        <android.support.constraint.Guideline
            android:id="@+id/verticalGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>

        <ImageButton
            android:id="@+id/callButton"
            android:layout_width="45dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/phone"
            app:layout_constraintTop_toTopOf="@+id/customerSupport"
            app:layout_constraintLeft_toRightOf="@+id/phoneID"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="43dp"
            />

        <TextView
            android:id="@+id/faxID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="651-793-1246"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneID"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/phoneID" />

        <TextView
            android:id="@+id/emailID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="it.desk@metrostate.edu"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/faxID"
            app:layout_constraintLeft_toRightOf="@+id/emailText"
            android:layout_marginLeft="50dp" />

        <TextView
            android:id="@+id/phoneID"
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="651-793-1240"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toRightOf="@+id/phoneText"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toBottomOf="@+id/customerSupport" />

        <TextView
            android:id="@+id/customerSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT Customer Services"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/itservices"
            app:layout_constraintLeft_toLeftOf="@id/verticalGuideline" />

        <TextView
            android:id="@+id/itservices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information Technology(ITS)"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/verticalGuideline"
            app:layout_constraintTop_toTopOf="@id/horizontalGuideline" />

        <TextView
            android:id="@+id/faxText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Fax:"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneText"
            app:layout_constraintLeft_toLeftOf="@id/verticalGuideline" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Email:"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/faxText"
            app:layout_constraintLeft_toLeftOf="@id/verticalGuideline" />

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Telephone:"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/customerSupport"
            app:layout_constraintLeft_toLeftOf="@id/verticalGuideline" />

        <ImageButton
            android:id="@+id/emailButton"
            android:layout_width="45dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/email"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/callButton"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/callButton" />

        <TextView
            android:id="@+id/hoursText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Hours:"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/emailText"
            app:layout_constraintLeft_toLeftOf="@id/verticalGuideline" />

        <TextView
            android:id="@+id/hoursID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="@string/hours"
            app:layout_constraintLeft_toRightOf="@+id/hoursText"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/emailID"
            android:paddingBottom="10dp"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
